{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "typescript": "warn",
    "react": "warn",
    "react-perf": "warn",
    "jsx-a11y": "warn",
    "nextjs": "warn",
    "unicorn": "warn",
    "import": "warn",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrors": "all",
        "caughtErrorsIgnorePattern": "^_"
      }
    ]
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "coverage",
    "*.min.js",
    "public"
  ]
}
